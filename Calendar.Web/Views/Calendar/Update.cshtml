@model CalendarViewModel
@{
    Layout = null;
}

<div class="container my-5">
    <h1 class="mb-4">更新日歷</h1>
    <form id="Calendar_Update" onsubmit="return false">
        <input id="groupId" name="groupId" type="hidden" value="@Model.groupId">
        <div class="mb-3">
            <label for="title" class="form-label">標題</label>
            <input type="text" class="form-control" id="title" name="title" value="@Model.title" required>
        </div>

        <div class="mb-3">
            <label for="start" class="form-label">開始時間</label>
            <input type="datetime-local" class="form-control" id="start" name="start" value="@Html.ValueFor(model => model.start, "{0:yyyy-MM-ddThh:mm}")">
        </div>

        <div class="mb-3">
            <label for="end" class="form-label">結束時間</label>
            <input type="datetime-local" class="form-control" id="end" name="end" value="@Model.end">
        </div>

        <div class="mb-3">
            <label for="color" class="form-label">背景顏色</label>
            <input type="color" class="form-control form-control-color" id="color" name="color" title="選擇背景顏色" value="@Model.color">
        </div>

        <div class="mb-3">
            <label for="textColor" class="form-label">文字顏色</label>
            <input type="color" class="form-control form-control-color" id="textColor" name="textColor" title="選擇文字顏色" value="@Model.textColor">
        </div>

        <button name="save" class="btn btn-primary">提交</button>
    </form>
</div>
<script src="~/js/Calendar_Update.js"></script>
